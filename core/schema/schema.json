{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://fiboa.example/core/schema.json",
  "title": "fiboa file-format agnostic schema for the properties",
  "$defs": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "geometry": {
      "format": "geometry"
    },
    "bbox": {
      "format": "bunding-box"
    },
    "area": {
      "type": "number",
      "format": "uint32",
      "exclusiveMinimum": 0,
      "maximum": 4294967295
    },
    "datetime": {
      "type": "string",
      "format": "date-time",
      "pattern": "Z$"
    },
    "expires": {
      "type": "string",
      "format": "date-time",
      "pattern": "Z$"
    }
  }
}