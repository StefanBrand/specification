{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://fiboa.example/metadata/schema.json",
  "title": "fiboa file-format agnostic schema for the properties",
  "$defs": {
    "fiboa_version": {
      "type": "string",
      "const": "0.1.0"
    },
    "fiboa_extensions": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "type": "string",
        "format": "uri"
      }
    },
    "id": {
      "type": "string",
      "minLength": 1
    },
    "license": {
      "type": "string",
      "pattern": "^[\\w\\-\\.\\+]+$"
    },
    "links": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/link"
      }
    },
    "geometry": {
      "$comment": "To be defined by the encoding"
    },
    "bbox": {
      "type": "array",
      "oneOf": [
        {
          "minItems": 4,
          "maxItems": 4
        },
        {
          "minItems": 6,
          "maxItems": 6
        }
      ],
      "items": {
        "type": "number"
      }
    },
    "area": {
      "type": "number",
      "exclusiveMinimum": 0
    },
    "datetime": {
      "type": "string",
      "format": "date-time",
      "pattern": "Z$"
    },
    "expires": {
      "type": "string",
      "format": "date-time",
      "pattern": "Z$"
    },
    "link": {
      "type": "object",
      "required": [
        "href",
        "rel"
      ],
      "properties": {
        "href": {
          "type": "string",
          "format": "uri-reference",
          "minLength": 1
        },
        "rel": {
          "type": "string",
          "minLength": 1
        },
        "type": {
          "type": "string",
          "minLength": 1
        },
        "title": {
          "type": "string",
          "minLength": 1
        }
      }
    }
  }
}